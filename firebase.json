{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "main",
      "public": "build/client",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/festival",
          "destination": "/landing/festival.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "/landing/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=3600"
            }
          ]
        }
      ]
    },
    {
      "target": "festival",
      "public": "build/client",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "index.html"],
      "rewrites": [
        {
          "source": "/",
          "destination": "/landing/festival.html"
        },
        {
          "source": "**",
          "destination": "/landing/festival.html"
        }
      ],
      "headers": [
        {
          "source": "/landing/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=3600"
            }
          ]
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
